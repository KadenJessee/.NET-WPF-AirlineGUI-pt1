                <Label x:Name="lblSeat9" Content="9" Background="Blue" Height="50" Width="50" Canvas.Left="75" Canvas.Top="220" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat10" Content="10" Background="Blue" Height="50" Width="50" Canvas.Left="130" Canvas.Top="220" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat11" Content="11" Background="Blue" Height="50" Width="50" Canvas.Left="220" Canvas.Top="220" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat12" Content="12" Background="Blue" Height="50" Width="50" Canvas.Left="275" Canvas.Top="220" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>

                <Label x:Name="lblSeat13" Content="13" Background="Blue" Height="50" Width="50" Canvas.Left="75" Canvas.Top="275" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat14" Content="14" Background="Blue" Height="50" Width="50" Canvas.Left="130" Canvas.Top="275" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat15" Content="15" Background="Blue" Height="50" Width="50" Canvas.Left="220" Canvas.Top="275" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat16" Content="16" Background="Blue" Height="50" Width="50" Canvas.Left="275" Canvas.Top="275" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
            </Canvas>
        </Canvas>

        <Canvas x:Name="canvas767" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Visibility="Hidden">
            <Label x:Name="lbl" Content="767" Canvas.Left="167" Canvas.Top="57" FontSize="25"/>
            <Canvas x:Name="c767_seats">
                <Label x:Name="Seat1" Content="1" Background="Blue" Height="50" Width="50" Canvas.Left="40" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat2" Content="2" Background="Blue" Height="50" Width="50" Canvas.Left="95" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat3" Content="3" Background="Blue" Height="50" Width="50" Canvas.Left="175" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat4" Content="4" Background="Blue" Height="50" Width="50" Canvas.Left="255" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
