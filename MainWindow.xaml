                <Label x:Name="lblSeat3" Content="3" Background="Blue" Height="50" Width="50" Canvas.Left="220" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat4" Content="4" Background="Blue" Height="50" Width="50" Canvas.Left="275" Canvas.Top="100" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Rectangle x:Name="rectLine" Fill="Black" Height="5" Width="245" Canvas.Left="75" Canvas.Top="155"/>

                <Label x:Name="lblSeat5" Content="5" Background="Blue" Height="50" Width="50" Canvas.Left="75" Canvas.Top="165" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat6" Content="6" Background="Blue" Height="50" Width="50" Canvas.Left="130" Canvas.Top="165" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="lblSeat7" Content="7" Background="Blue" Height="50" Width="50" Canvas.Left="220" Canvas.Top="165" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
