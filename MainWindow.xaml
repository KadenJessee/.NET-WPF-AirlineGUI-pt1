                <Label x:Name="Seat19" Content="19" Background="Blue" Height="50" Width="50" Canvas.Left="255" Canvas.Top="265" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat20" Content="20" Background="Blue" Height="50" Width="50" Canvas.Left="310" Canvas.Top="265" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>

            </Canvas>
        </Canvas>


        <Button x:Name="btnChangeSeat" Grid.Column="1" Content="Change Seat" HorizontalAlignment="Left" Margin="51,5,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="126" FontSize="15" IsEnabled="False"/>
        <Button x:Name="btnAddPassenger" Grid.Column="1" Content="Add Passenger" HorizontalAlignment="Left" Margin="51,50,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="126" FontSize="15" Click="btnAddPassenger_Click" IsEnabled="False"/>
        <Button x:Name="btnDeletePassenger" Grid.Column="1" Content="Delete Passenger" HorizontalAlignment="Left" Margin="200,50,0,0" Grid.Row="1" VerticalAlignment="Top" Height="40" Width="126" FontSize="15" IsEnabled="False"/>
        <GroupBox x:Name="grpboxPassengerInfo" Grid.Column="1" Header="Passenger Info" FontSize="20" Margin="0,0,10,100" Grid.RowSpan="2">
            <Grid x:Name="passengerInfoGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Label x:Name="lblChooseFlight" Grid.Row="0" Grid.Column="0" Content="Choose Flight:"/>
                <ComboBox x:Name="cmbboxChooseFlight" Grid.Row="0" Grid.Column="1" SelectionChanged="cmbboxChooseFlight_SelectionChanged">
                    <!--for testing purposes-->
                    <!--ComboBoxItem x:Name="boxitemA380" Content="102 - Airbus A380"-->
                    <!--ComboBoxItem Content="412 - Boeing 767"-->
                </ComboBox>

                
                <Label x:Name="lblChoosePassenger" Grid.Row="2" Grid.Column="0" Content="Choose Passenger:"/>
                <ComboBox x:Name="cmbboxChoosePassenger" Grid.Row="2" Grid.Column="1" IsEnabled="False"/>

                <Label x:Name="lblPassengerSeat" Grid.Row="4" Grid.Column="0" Content="Passenger's Seat:"/>
                <Label x:Name="lblDisplayPassengerSeat" Grid.Row="3" Grid.Column="1" BorderThickness="2,2,2,2" BorderBrush="Black" Margin="10,10,150,0" Grid.RowSpan="2" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="grpboxColorKey" Grid.Row="3" Grid.Column="1" Header="Color Key" FontSize="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="rectRed" Margin="36,10,36,10" Fill="Red" Grid.Row="0" Grid.Column="0"/>
                <Rectangle x:Name="rectBlue" Margin="36,10,36,10" Fill="Blue" Grid.Row="1" Grid.Column="0"/>
                <Rectangle x:Name="rectGreen" Margin="36,10,36,10" Fill="Green" Grid.Row="2" Grid.Column="0"/>

                <Label x:Name="lblSeatTaken" Grid.Row="0" Grid.Column="1" Content="Seat is taken" Margin="0,10,0,0"/>
                <Label x:Name="lblSeatEmpty" Grid.Row="1" Grid.Column="1" Content="Seat is empty" Margin="0,10,0,0"/>
                <Label x:Name="lblSelectedPassenger" Grid.Row="2" Grid.Column="1" Content="Selected Passengers Seat" Margin="0,10,0,0"/>

            </Grid>
        </GroupBox>

    </Grid>
</Window>
