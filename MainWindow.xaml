                <Label x:Name="Seat7" Content="7" Background="Blue" Height="50" Width="50" Canvas.Left="95" Canvas.Top="155" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat8" Content="8" Background="Blue" Height="50" Width="50" Canvas.Left="175" Canvas.Top="155" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat9" Content="9" Background="Blue" Height="50" Width="50" Canvas.Left="255" Canvas.Top="155" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat10" Content="10" Background="Blue" Height="50" Width="50" Canvas.Left="310" Canvas.Top="155" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                
                <Label x:Name="Seat11" Content="11" Background="Blue" Height="50" Width="50" Canvas.Left="40" Canvas.Top="210" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat12" Content="12" Background="Blue" Height="50" Width="50" Canvas.Left="95" Canvas.Top="210" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat13" Content="13" Background="Blue" Height="50" Width="50" Canvas.Left="175" Canvas.Top="210" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat14" Content="14" Background="Blue" Height="50" Width="50" Canvas.Left="255" Canvas.Top="210" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat15" Content="15" Background="Blue" Height="50" Width="50" Canvas.Left="310" Canvas.Top="210" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                
                <Label x:Name="Seat16" Content="16" Background="Blue" Height="50" Width="50" Canvas.Left="40" Canvas.Top="265" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
                <Label x:Name="Seat17" Content="17" Background="Blue" Height="50" Width="50" Canvas.Left="95" Canvas.Top="265" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontSize="25"/>
